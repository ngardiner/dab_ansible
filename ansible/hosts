# This is the default ansible 'hosts' file.
#
# It should live in /etc/ansible/hosts
#
#   - Comments begin with the '#' character
#   - Blank lines are ignored
#   - Groups of hosts are delimited by [header] elements
#   - You can enter hostnames or ip addresses
#   - A hostname/ip can be a member of multiple groups

[ansible]
ansible		ansible_connection=local

[hass]
hass		ansible_ssh_private_key_file=/etc/ansible/keys/key1

[logserver]
logserver	ansible_ssh_private_key_file=/etc/ansible/keys/key1

[lms]
lms		ansible_ssh_private_key_file=/etc/ansible/keys/key1

[mariadb]
mariadb		ansible_ssh_private_key_file=/etc/ansible/keys/key1

[zoneminder]
zoneminder	ansible_ssh_private_key_file=/etc/ansible/keys/key1
